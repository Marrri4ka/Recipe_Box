
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>allrecipes</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel='stylesheet' href='~/css/styles.css'>
  </head>
  <body>

    <div class="row">
      <div class="col-lg-12">
    <div class="input-group">




      <form class="navbar-form navbar-right" role="search" method="post" id="searchform" action="/search_recipe">
      <input name="userRecipe" id="userRecipe" type="text" class="form-control SearchBar" placeholder="Search for...">
      <span class="input-group-btn">
        <button class="btn btn-defaul SearchButton" type="submit">
            <span class=" glyphicon glyphicon-search SearchIcon" ></span>
        </button>
      </form>
      </span>
    </div><!-- /input-group -->
  </div>

  <!-- /.col-lg-6 -->
</div>

<div class="row">
  <div class="col-lg-5">
    <form action="recipes_sort" method="post">
  <button> Sort </button>
</form>
</div>
</div>



       <div class="container">
	        <div class="row">
	    <div class="col-md-12">
	       <center> <h3>All recipes </h3> </center>
	    </div>
      @if(Model.Count == 0)
      {
      <p>no recipes yet</p>
      }
       else
       {
       @foreach (var recipe in Model)
       {
         <div class="col-md-12">
             <div class="lisitemap-section">
           <ul>
             <li><a href="/recipe/@recipe.GetId()">@recipe.GetName() @recipe.GetRate()</a></li>
             </ul>
           </div>
         </div>

       }
       }



	</div>
</div>
  </body>
</html>
